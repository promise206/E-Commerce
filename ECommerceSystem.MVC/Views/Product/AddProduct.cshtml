@using ECommerceSystem.Domain.Enum
@model ProductViewModel
<div class="customer-container">
      <div class="row justify-content-center">
          <div class="col-md-5">
               <div class="card">
                 <h2 class="card-title text-center">Add Product</h2>
                  <div class="card-body py-md-4">
                   <form asp-action="StoreProduct" enctype="multipart/form-data" method="post">
                       <div style="color: red;">@ViewBag.message</div>
                       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ShortDescription" class="form-control" placeholder="Short Description"/>
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="row_clearfix">
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                <input asp-for="Price" class="form-control" placeholder="price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                    <input asp-for="PercentageOff" class="form-control" placeholder="%Discount" />
                                    <span asp-validation-for="PercentageOff" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                    <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="ImageGallery"/>
                            <span asp-validation-for="ImageGallery" class="text-danger"></span>
                        </div>
                        <div >          
                            <label asp-for="Category"></label>
                            <select asp-for="Category" size="3" asp-items="Html.GetEnumSelectList<Categories>()" required></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="LongDescription" class="form-control" placeholder="Full Description"></textarea>
                            <span asp-validation-for="LongDescription" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex flex-row align-items-center justify-content-between">
                          <button class="btn btn-primary">Add</button>
                        </div>
                   </form>
                 </div>
              </div>
        </div>
    </div>
</div>

