@model CustomerViewModel

<div class="customer-container">
      <div class="row justify-content-center">
          <div class="col-md-5">
               <div class="card">
                 <h2 class="card-title text-center">Register</h2>
                  <div class="card-body py-md-4">
                   <form asp-action="RegisterAction" method="post" enctype="multipart/form-data">
                       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row_clearfix">
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                <input asp-for="FirstName" class="form-control"  placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control"  placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Mobile"  class="form-control"  placeholder="Mobile"/>
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="row_clearfix">
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col_half">
                                <div> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                <input  asp-for="PasswordAgain" type="password" class="form-control"  placeholder="confirm-password"/>
                                <span asp-validation-for="PasswordAgain" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="ImageUrl" multiple/>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ShippingAddress"  class="form-control"  placeholder="Address"/>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="d-flex flex-row align-items-center justify-content-between">
                          <a asp-controller="Customer" asp-action="Login" asp-route-id="">Login</a>
                          <button class="btn btn-primary">Create Account</button>
                        </div>
                        <div style="color: red;">@ViewBag.message</div>
                   </form>
                 </div>
              </div>
        </div>
    </div>
</div>

